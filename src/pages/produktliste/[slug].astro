}
const { myData } = Astro.props;
console.log(myData);

import Menylayout from "../../komponenter/layouts/Menylayout.astro";
import Info from "../../komponenter/Info.astro";
---

<Menylayout>
  <section class="singleview">
    <img class="skal1" src={`/drej-billeder/${myData.img1}`} alt="" />
    <img class="skal2" src={`/drej-billeder/${myData.img2}`} alt="" />
    <!-- <img class="skal2" src={`/drej-billeder/${myData.}`} alt="" /> -->
    <img class="skal3" src={`/drej-billeder/${myData.img3}`} alt="" />
  </section>
  <section class="grid_3">
    <p class="produkttekst">{myData.producttext}</p>

    <Info
      pris={myData.Price}
      nummer={myData.number}
      træ={myData.wood}
      mål={myData.size}
    />
  </section>

  <div class="kontakt-link">
    <a href="/kontakt" class="kontakt-text">
      <span class="bold">Kontakt</span> for køb
      <img src="/./drej-billeder/pillll.svg" alt="Pil" class="arrow" />
    </a>
  </div>
  <div class="container">
    <h3>Flere produkter</h3>
    <div class="image-container">
      <img class="flereskal" src="/./drej-billeder/2.webp" alt="" />
      <img class="flereskal" src="/./drej-billeder/3.webp" alt="" />
      <img class="flereskal" src="/./drej-billeder/4.webp" alt="" />
    </div>
  </div>
</Menylayout>
<style>
  /* slettes efter generelt.css */
  html {
    background-color: #e2d6c6;
  }
  body {
    margin-left: 2rem;
    margin-right: 2rem;
  }

  p {
    font-size: 10px;
    line-height: 2.5;
  }
  /* slettes */

  .produkttekst {
    margin: 15%;
  }

  .skal3 {
    grid-column: 1/3;
    justify-self: center;
    border: #e18658;
    grid-column: 1fr 1fr;
    max-width: 50%;
  }
  .skal1 {
    max-width: 100%;

    justify-self: center;
  }
  .skal2 {
    justify-self: center;
    max-width: 60%;
  }

  .singleview {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 2;
  }

  .singleview img {
    position: relative;
    margin: 5px; /* Tilføj lidt margen rundt omkring billederne */
  }

  .kontakt-link {
    display: flex; /* Anvend flexbox */
    justify-content: flex-end; /* Juster indholdet til højre */
    position: relative; /* Positionerer pseudo-elementet i forhold til dette element */
    color: black; /* Standardtekstfarve */
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .kontakt-link::after {
    content: ""; /* Indholdet af pseudo-elementet */
    position: absolute; /* Positionen er relativ til det nærmeste positionerede forældreelement */
    left: 0; /* Startposition fra venstre */
  }

  .kontakt-text {
    color: black; /* Farve på teksten */
    text-decoration: none; /* Fjern understregning fra linket */
    text-transform: uppercase; /* Konverter teksten til store bogstaver */
    transition: color 0.3s; /* Glat farveskift under hover */
  }
  .kontakt-text:hover,
  .arrow:hover {
    color: white; /* Farveændring ved hover */
  }

  .bold {
    font-weight: bold; /* Gør teksten bold */
  }

  .arrow {
    vertical-align: middle; /* Juster pilen vertikalt i midten af teksten */
    margin-left: 5px; /* Lidt margen mellem teksten og pilen */
    margin-top: -4px;
  }

  .container {
    background-color: #e18658; /* Baggrundsfarve orange */
    padding: 20px; /* Polstring for at skabe plads omkring indholdet */
  }

  .image-container {
    display: flex; /* Brug flexbox for at placere billeder i en række */
    justify-content: center; /* Centrer billeder vandret */
    margin-top: 20px; /* Lidt margen over billederne */
  }

  .image-container img {
    width: 200px; /* Samme bredde for alle billeder */
    height: auto; /* Bevar proportioner */
    margin: 0 10px; /* Lidt margen mellem hvert billede */
  }
  .flereskal {
    max-width: 30%;
  }

  .image-container .flereskal {
    background-color: #e2d6c6; /* Baggrundsfarve hvid for hvert div-element */
    padding: 10px; /* Polstring for at skabe plads omkring hvert billede */
  }

  @media (min-width: 769px) {
    .singleview {
      align-items: center;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1/2;
    }

    .skal2,
    .skal1,
    .skal3 {
      max-width: 100%;
      justify-self: center;
    }
    .skal3 {
      align-self: center;
      grid-column: 3/4;
    }
    .grid_3 {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
