---
const { text, billed, alt } = Astro.props;
---

<article>
  <img src={billed} alt={alt} />
  <div class="flex">
    <p>
      {text}
    </p>
  </div>
</article>
<style>
  .flex {
    display: flex;
  }
  article {
    background-color: var(--baggrund);
    z-index: 100;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30px;
    margin: 20px;

    p {
      padding: 20px 20px 20px 20px;
      font-size: 1.2rem;
      text-align: center;
      line-height: 1.5rem;
    }
  }
</style>
